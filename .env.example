# OpenField environment configuration
OPENFIELD_ENV=development
OPENFIELD_DEBUG=1
OPENFIELD_HOST=127.0.0.1
OPENFIELD_PORT=5000

# Admin access (optional)
OPENFIELD_ADMIN_KEY=

# Session secret (required if using auth)
OPENFIELD_SECRET_KEY=change-this-secret

# SMTP email (optional)
OPENFIELD_SMTP_HOST=
OPENFIELD_SMTP_PORT=587
OPENFIELD_SMTP_USER=
OPENFIELD_SMTP_PASS=
OPENFIELD_SMTP_TLS=1
OPENFIELD_SMTP_FROM=no-reply@openfield.local

# Platform mode (multi-supervisor)
OPENFIELD_PLATFORM_MODE=0
OPENFIELD_REQUIRE_SUPERVISOR_KEY=0
OPENFIELD_PROJECT_REQUIRED=0
OPENFIELD_SUPERVISOR_KEY_PARAM=sk
OPENFIELD_SUPERVISOR_KEY_COOKIE=openfield_skey

# Paths (relative paths are resolved from the project root)
OPENFIELD_DB_PATH=instance/openfield.db
OPENFIELD_UPLOAD_DIR=uploads
OPENFIELD_EXPORT_DIR=exports

# Drafts
OPENFIELD_SERVER_DRAFTS=1
OPENFIELD_DRAFTS_TABLE=survey_drafts

# Enumerator code checksum secret
OPENFIELD_CODE_SECRET=change-this-secret

# Branding
OPENFIELD_APP_NAME=OpenField Collect
OPENFIELD_APP_VERSION=OpenField MVP v0.1

# Gunicorn (optional)
OPENFIELD_GUNICORN_BIND=127.0.0.1:8000
OPENFIELD_GUNICORN_WORKERS=2
OPENFIELD_GUNICORN_THREADS=4
OPENFIELD_GUNICORN_TIMEOUT=60

# OAuth placeholders (not yet wired)
OPENFIELD_GOOGLE_OAUTH_CLIENT_ID=
OPENFIELD_GOOGLE_OAUTH_CLIENT_SECRET=
OPENFIELD_MICROSOFT_OAUTH_CLIENT_ID=
OPENFIELD_MICROSOFT_OAUTH_CLIENT_SECRET=
OPENFIELD_LINKEDIN_OAUTH_CLIENT_ID=
OPENFIELD_LINKEDIN_OAUTH_CLIENT_SECRET=
OPENFIELD_FACEBOOK_OAUTH_CLIENT_ID=
OPENFIELD_FACEBOOK_OAUTH_CLIENT_SECRET=

# Audio transcription (optional, manual trigger in Interviews page)
OPENFIELD_TRANSCRIBE_PROVIDER=openai
OPENFIELD_TRANSCRIBE_OPENAI_KEY=
OPENFIELD_TRANSCRIBE_MODEL=gpt-4o-mini-transcribe
OPENFIELD_TRANSCRIBE_DEEPGRAM_KEY=
OPENFIELD_TRANSCRIBE_DEEPGRAM_MODEL=nova-2
OPENFIELD_TRANSCRIBE_LANGUAGE=
OPENFIELD_TRANSCRIBE_TIMEOUT=120
